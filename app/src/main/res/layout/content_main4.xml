<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/temnozelena"
    android:orientation="vertical"

    tools:context="com.example.velkovska89.prvproekt.Main4Activity">


    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@color/portokalova"
        android:text="CHECK INTERNET CONNECTION"
        android:textColor="@color/White"
        android:textSize="20sp"

        />


    <TextView
        android:id="@+id/internetChecked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCheck"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/forma_shape"
        android:padding="10dp"
        android:text="Internet is connected fine!"
        android:textColor="@color/Black"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/internetChecked"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="20sp"
            android:drawableLeft="@drawable/left_arrow"
            android:layout_margin="10dp"
            android:padding="5dp"/>


    </LinearLayout>

</RelativeLayout>
